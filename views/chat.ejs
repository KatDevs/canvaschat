<!doctype html>
<html>
<head>
    <title>Canvas Chat</title>    
    <link rel="stylesheet" href="vendor/materialize/css/materialize.min.css">    
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/main.css">    
    <!-- Load vendor JS -->
    <script type="text/javascript" src="vendor/jquery/jquery.js"></script>
    <script type="text/javascript" src="vendor/materialize/js/materialize.js"></script>
</head>
<body>    	
	<header>
		<%- include partials/common/header.ejs %>
        <span id="fromUserId" data-id="<%= user.facebook.id %>">
        <span id="fromUserFbName" data-name="<%= user.facebook.name%>">
        <span id="fromUserFbToken" data-token="<%= user.facebook.token%>">
	</header>
	<main>
        <div class="row">
            <div class="col s12 l6">
                <%- include partials/chat/canvas.ejs %>                     
            </div>            
        </div>    
        <div class="row">
            <div class="col s12 l6">
                <%- include partials/chat/settings.ejs %>  
            </div>
            <div class="col s12">
               <%- include partials/chat/friends.ejs %>                 
            </div>
        </div>    
    </main>    
    <script src="/chat/main.js"></script>
</body>
</html>

