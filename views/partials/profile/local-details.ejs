<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <h4>User Details</h4>
        <ul class="collection">
          <li class="collection-item">Id: <%= user._id %></li>
          <li class="collection-item">Email: <%= user.local.email %></li>
          <li class="collection-item truncate">Password: <%= user.local.password %></li>
          <li class="collection-item ">First Name: <%= user.local.firstName %></li>
          <li class="collection-item">Last Name: <%= user.local.lastName %></li>
        </ul>        
      </div>      
    </div>
  </div>
</div>